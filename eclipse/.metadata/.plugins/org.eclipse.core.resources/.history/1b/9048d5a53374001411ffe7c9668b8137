package com.takam23.ci.item;

import com.takam23.ci.reference.Reference;

import net.minecraft.item.Item;

public class ItemCI extends Item {
	public ItemCI() {
		super();
	}
	
	@Override
	public String getUnlocalizedName() {
		return String.format("item.s%s%", Reference.MOD_ID.toLowerCase(), getUnwrappedLocalizedName(super.getUnlocalizedName()));
	}
	
	protected String getUnwrappedLoclizedName() {
		return unlocalizedName.substring(unlocalizedName.indexOf(".") + 1);
	}
}
